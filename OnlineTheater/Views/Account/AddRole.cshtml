@model IEnumerable<OnlineTheater.Models.AddRole>

@using (Html.BeginForm("AddRole", "Account"))
{
    <br />
    for (int i = 0; i < Model.ToList().Count; i++)
    {
        <li class="list-group-item clearfix" style="margin-top: 5px">
            <div class="pull-left">
                @Html.HiddenFor(x => Model.ToList()[i].UserName, Model.ToList()[i].UserName)
                <p>
                    @Html.Label("User email:")&nbsp
                    @Html.LabelFor(x => Model.ToList()[i].UserName, Model.ToList()[i].UserName)
                </p>
                @for (int j = 0; j < Model.ToList()[i].RoleNames.ToList().Count; j++)
                {
                    <p>
                        @Html.Label("Current Role:")&nbsp
                        @Html.LabelFor(x => Model.ToList()[i].RoleNames.ToList()[j], Model.ToList()[i].RoleNames.ToList()[j])
                    </p>
                }
            </div>
            <div class="pull-right">
                @Html.DropDownListFor(x => Model.ToList()[i].selectedRole, new SelectList(Model.ToList()[i].AllRoles, Model.ToList()[i].RoleNames.ToList()[0]))
            </div>
        </li>
    }
    <button type="submit" class="btn btn-success pull-right" style="margin: 20px 15px 0px 0px">Confirm Changes</button>
    <br />
    <br />
    <br />
}

