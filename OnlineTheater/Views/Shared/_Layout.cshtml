<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding: 50px 0px 0px 0px">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:darkslategray">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Online Theatre", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, null, "homeID", null, null)</li>

                    @if (User.IsInRole("User") || User.IsInRole("TheatreAgent") || User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Theatres", "Index", "Theatres", null, null, null, null, null)</li>
                        <li>@Html.ActionLink("Plays", "Index", "Plays", null, null, null, null, null)</li>

                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Roles", "AddRole", "Account", null, null, null, null, null)</li>
                        }

                        if (User.IsInRole("User"))
                        {
                            <li>@Html.ActionLink("Reserve Play", "ReservePlay", "Theatres", null, null, null, null, null)</li>
                            <li>@Html.ActionLink("My reservations", "MyReservations", "Account", null, null, null, null, null)</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("About", "Index", "Home", null, null, "aboutID", null, null)</li>
                        <li>@Html.ActionLink("Services", "Index", "Home", null, null, "servicesID", null, null)</li>
                        <li>@Html.ActionLink("Contact", "Index", "Home", null, null, "contactID", null, null)</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
        <footer style="text-align:center; display:block; background-color:darkslategray;" id="contactID">
            <div class="container-fluid" style="height:auto; justify-content:center; display:flex">
                <a href="https://www.facebook.com/">
                    <img src="~/Images/fb.png" style="width:50px; height:50px; border-style:none; margin: 10px 10px 0 0" />
                </a>

                <a href="https://www.instagram.com/">
                    <img src="~/Images/instagram.png" style="width:50px; height:50px; border-style:none; margin: 10px 10px 0 0" />
                </a>

                <a href="https://www.linkedin.com/">
                    <img src="~/Images/linkedin.png" style="width:50px; height:50px; border-style:none; margin: 10px 10px 0 0" />
                </a>
            </div>
            <h3 style="text-align:center; color: white;">
                &copy; Online Theatre 2020
            </h3>
            <p style="text-align:center; color: white; font-size: medium; margin-top: 10px;">Powered by</p>
            <a href="https://dotnet.microsoft.com/" style="text-align:center; height:120px; color: white;">
                <img src="~/Images/dotnetlogo.png" style="width:50px; height:50px; border-style:none; margin: 0px 0px 15px 0" />
            </a>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
