@{
    ViewBag.Title = "Home Page";
}

<div id="homeID" class="row container-fluid" style="width:100%; height:100%; margin:0px; padding:0;">
    <img src="~/Images/toronto'sWinterGarden.jpg" style="width:100%; height:800px; filter:blur(1px);" alt="Library;" />
    <h1 style="font-weight:bold; font-size:100px; width:100%; color:white; background-color:rgba(0,0,0,0.5); text-align:center; top:45%; left:50%; position:absolute; transform:translate(-50%, -50%);">
        Online Theatre
    </h1>
</div>

<div id="aboutID" style="margin:auto; padding:0px; align-content: center">


    <div class="container-row">
        <div class="col-md-6" style="text-align:center; justify-content:center; display:flex; align-items:center;margin-top:2%; vertical-align:central;">
            <h2 style="font-weight:bold;">
                Welcome to our Online Theatre!
            </h2>
        </div>
        <div class="col-md-6" style="padding: 0px 0px 0px 15px; height:100%; justify-content:center; display:flex; align-items:center">
            <div style="width:100%">
                <h2 style="font-weight: bold;">
                    Time saving, easy and efficient!
                </h2>
                <h3>
                    In just 3 steps you are closer than ever to reserve a seat for your favourite play! <br />
                    By logging in on our website you will be able to reserve which play you'd like to watch in the theatre!
                </h3>
            </div>
        </div>

    </div>


    <div class="row" style="height: 400px; margin:20px; display:inline-block;">
        <div class="col-md-4" style="height:100%">
            <img src="~/Images/theatreAgentRegistration.jpg" style="width:100%; height:90%" />
            <h3 style="height:10%;  margin: 10px 0px 10px 0px; text-align:center">Login to your account</h3>
        </div>
        <div class="col-md-4" style="height:100%">
            <img src="~/Images/watchinPlay.jpg" style="width:100%; height:90%" />
            <h3 style="height:10%; margin: 10px 0px 10px 0px; text-align:center">Reserve your play</h3>
        </div>
        <div class="col-md-4" style="height:100%">
            <img src="~/Images/playInATheatre.jpg" style="width:100%; height:90%" />
            <h3 style="height:10%; margin: 10px 0px 10px 0px; text-align:center">Enjoy!</h3>
        </div>
    </div>



</div>

<div class="container-fluid" id="servicesID" style="padding:15px 0px 30px 0px; margin:0">
    <div style="height:300px; background:url(/Images/banner.jpg) no-repeat center; background-size:cover; width:100%">
        <div style="width:100%; padding-top:130px; color:white; text-align:center;">
            <div class="col-md-4">
                <p>
                    <h3 style="font-weight:bold">
                        Plays
                    </h3>
                </p>

                <p>
                    <h2 style="font-weight: bold; background-color: rgba(0,0,0,0.5);">
                        10.000+
                    </h2>
                </p>
            </div>

            <div class="col-md-4">
                <p>
                    <h3 style="font-weight:bold">
                        Clients
                    </h3>
                </p>

                <p>
                    <h2 style="font-weight:bold; background-color:rgba(0,0,0,0.5);">
                        1500+
                    </h2>
                </p>
            </div>

            <div class="col-md-4">
                <p>
                    <h3 style="font-weight:bold">
                        Awards
                    </h3>
                </p>

                <p>
                    <h2 style="font-weight:bold; background-color:rgba(0,0,0,0.5);">
                        25
                    </h2>
                </p>
            </div>

        </div>
    </div>
</div>