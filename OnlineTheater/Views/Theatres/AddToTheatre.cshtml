@model OnlineTheater.Models.AddToTheatre
@{
    ViewBag.Title= "AddToTheatre";
}

<div class="container" style="padding:30px 0px 15px 0px">
    <h2>Add to Theatre : @ViewBag.TheatreName</h2>
    @using (Html.BeginForm("AddToTheatre", "Theatres"))
    {
        <div class="form-group">
            @Html.DropDownListFor(m => m.selectedPlay, new SelectList(Model.Plays, "PlayId", "PlayName"), new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.selectedTheatre)
        <button type="submit" class="btn btn-primary">Add Play</button>
    }

</div>
